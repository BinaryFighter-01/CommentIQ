# Database (Supabase PostgreSQL)
DATABASE_URL="postgresql://user:password@host:5432/commentiq?schema=public"

# OpenAI / ChatGPT Go API
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-5"
AI_DEFAULT_PROVIDER="gpt-5"

# YouTube API
YOUTUBE_API_KEY="AIza..."

# Reddit API
REDDIT_CLIENT_ID="xxx"
REDDIT_CLIENT_SECRET="yyy"
REDDIT_REFRESH_TOKEN="zzz"
REDDIT_USER_AGENT="CommentIQ/1.0 by your_reddit_username"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"
JWT_EXPIRES_IN="7d"

# Analytics Configuration
ANALYSIS_MAX_PER_HOUR=1000
ANALYSIS_MAX_PER_USER_PER_DAY=100
ANALYSIS_BATCH_SIZE=10
ENABLE_AI_CACHE=true
CACHE_TTL_HOURS=24

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Optional: Mock AI for development (skip real API calls)
MOCK_AI_PROVIDER=false
